/**
* change
*/

.change {
  color: #8995a1;
  font-size: 24rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}

.change .icon-down{
  color: #888;
  font-size: 20rpx;
}


.input-area{
  position: relative;
}

.icon-close{
  font-size: 50rpx;
  position: absolute;
  top: 0;
  right: 10rpx;
  z-index: 2;
   color: #888;
}

.textarea-wrap{
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}

.input-area textarea{
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}

.input-area .text-area{
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
}

.input-area .text-title{
  font-size: 28rpx;
  color: #8995a1
}

.input-area .text-result {
  padding: 20rpx 0;
}
